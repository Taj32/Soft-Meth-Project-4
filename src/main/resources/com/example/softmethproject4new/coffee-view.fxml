<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.softmethproject4new.coffeeController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="651.0" spacing="10.0">
            <children>
                <Label alignment="TOP_LEFT" contentDisplay="TOP" text="Order Coffee" textAlignment="CENTER">
               <font>
                  <Font size="36.0" />
               </font></Label>
            <ImageView fitHeight="126.0" fitWidth="251.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@coffee.jpg" />
               </image></ImageView>
            <GridPane prefHeight="132.0" prefWidth="611.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="29.666656494140625" minHeight="10.0" prefHeight="29.666656494140625" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="67.0" minHeight="10.0" prefHeight="43.00001017252603" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="35.99997965494791" minHeight="0.0" prefHeight="26.666666666666657" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <CheckBox mnemonicParsing="false" onAction="#changeAddOns" text="Sweet Cream" />
                  <CheckBox mnemonicParsing="false" onAction="#changeAddOns" text="French Vanilla" GridPane.rowIndex="1" />
                  <CheckBox mnemonicParsing="false" onAction="#changeAddOns" text="Irish Cream" GridPane.rowIndex="2" />
                  <CheckBox mnemonicParsing="false" onAction="#changeAddOns" text="Mocha" GridPane.columnIndex="1" />
                  <CheckBox mnemonicParsing="false" onAction="#changeAddOns" text="Caramel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Button mnemonicParsing="false" onAction="#addCoffee" text="add to Order" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                  <ComboBox fx:id="cb_size" prefWidth="150.0" promptText="Size" GridPane.columnIndex="2" />
                  <ComboBox fx:id="cb_quantity" onAction="#coffeeOrder" prefWidth="150.0" promptText="Quantity" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <Button layoutX="418.0" layoutY="118.0" mnemonicParsing="false" onAction="#returnToMain" text="Back to Menu" GridPane.rowIndex="3" />
                  <TextArea fx:id="coffeePrice" editable="false" prefHeight="200.0" prefWidth="200.0" promptText="\$0.00" GridPane.columnIndex="2" GridPane.rowIndex="2">
                     <GridPane.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </GridPane.margin>
                  </TextArea>
               </children>
            </GridPane>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
